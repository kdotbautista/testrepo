<%= form_for(@proposal) do |f| %>
  <% if @proposal.errors.any? %>
    <div id="alert alert-danger">
      <h2><%= pluralize(@proposal.errors.count, "error") %> prohibited this proposal from being saved:</h2>
      <ul>
      <% @proposal.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>
  <div class="field">
    <%= f.label :title %><br><small>Maximum 80 characters.</small><br />
    <%= f.text_field :title %>

  </div>
  <div class="field">
    <%= f.label :short_abstract %><br><small>Maximum 250 words.</small><br />
    <%= f.text_area :short_abstract, {:rows => 10} %>

  </div>
  <div class="field">
    <%= f.label :proposal %><br />
    <small>Maximum 750 words.</small><br>
    <%= f.text_area :proposal %>

  </div>
  <div class="field">
    <%= f.label :talk_type %><br />
    <%= f.select :talk_type, {"Select One..." => nil, "Intro" => "Intro", "Overview" => "Overview", "In-Depth" => "In-Depth", "Advanced" => "Advanced"} %>
  </div>
  <div class="field">
    <%= f.label :prior_presentation, "Have you given this talk before?" %><br />
    <small>Please let us know if you've given this talk before including any conference/user group information, and include a link to the video or slides if available.</small><br>
    <%= f.text_area :prior_presentation, {:rows => 3} %>

  </div>
  <div class="field">
    <%= f.label :special_requirements %><br />
    <small>Maximum 150 words.</small><br>
    <%= f.text_area :special_requirements, {:rows => 5} %>

  </div>
  <div class="actions">
    <%= f.submit 'Submit Proposal', :class => "btn" %>
    <%= link_to "Cancel", cfps_path, :class => "btn secondary" %>
  </div>
<% end %>

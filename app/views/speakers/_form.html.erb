<%= form_for @speaker, :html => {:multipart => true } do |f| %>
  <% if @speaker.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@speaker.errors.count, "error") %> prohibited this speaker from being saved:</h2>

      <ul>
      <% @speaker.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= f.label :name %><br />
    <%= f.text_field :name %>
  </div>
  <div class="speaker-info field clearfix">
    <%= f.label :photo %><br />
    <%= render "speakers/photo" %>
    <%= f.file_field :photo %>
  </div>
  <div class="field">
    <%= f.label :email %><br />
    <%= f.text_field :email %>
  </div>
  <div class="field">
    <%= f.label :website %><br />
    <%= f.text_field :website %>
  </div>
  <div class="field">
    <%= f.label :bio %><br />
    <%= f.text_area :bio, {:rows => 8} %>
  </div>
  <div class="actions">
    <%= f.submit :class => "btn" %>
    <%= link_to "Cancel", cfps_path, :class => "btn secondary" %>
  </div>
<% end %>
